/* pages/playList/playList.wxss */

.new-dvd-put-box{
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #e8e8e8;
  border: 1px solid #ccc;
  padding: 0 50rpx;
  font-size: 14px;
}
.new-dvd-put-l{
  width: 500rpx;
}
.put-l-con{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.put-l-b{
  color: #888;
}
.dvd-put-pp{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 30px;
  color: #e40077;
}

.actived{
  display: none;
}